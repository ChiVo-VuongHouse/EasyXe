<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"

    android:layout_marginBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--info card-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<ImageView-->
                <!--android:id="@+id/ivImage"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@mipmap/ic_launcher" />-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/image"
                app:civ_border_width="1dp"
                app:civ_border_color="#FCF6D2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:text="Jackie Chan"/>
                <TextView
                    android:id="@+id/tvUserLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:textSize="14sp"
                    android:text="Beijing, China"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/ivExpanse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@drawable/ic_expand_more_black_24dp"
                tools:ignore="VectorDrawableCompat"
                android:layout_marginRight="@dimen/small_margin" />

        </LinearLayout>
        <!--expand-->
        <LinearLayout
            android:id="@+id/llExpand"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Giới tính : Nam"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ: 123 Nguyễn Trãi"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>